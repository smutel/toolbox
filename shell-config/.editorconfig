root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[{*.md,*.asciidoc}]
trim_trailing_whitespace = false

[*.json]
trim_trailing_whitespace = false

[{Makefile,**.mk,makefile}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab

[*.py]
indent_size = 4
